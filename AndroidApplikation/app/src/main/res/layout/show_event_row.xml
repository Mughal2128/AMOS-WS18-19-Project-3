<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:elevation="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/thumbnail"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <ImageView
                android:id="@+id/arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/thumbnail"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/event_date"
                android:contentDescription="calendar"
                android:src="@drawable/ic_time" />

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:contentDescription="time"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/event_name"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/image_calendar"
                android:text="date"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/event_name"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/image_time"
                android:text="time"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/event_time"
                android:layout_margin="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/divider"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:maxLength="100"
                android:text="description"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/event_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/event_description"
                android:layout_margin="5dp"
                android:background="@color/secondaryColor"
                android:src="@drawable/ic_edit_white_24dp" />

            <ImageView
                android:id="@+id/event_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/event_description"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/event_edit"
                android:background="@color/secondaryColor"
                android:src="@drawable/ic_delete_white_24dp" />

            <ImageView
                android:id="@+id/event_join"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/event_description"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/event_delete"
                android:background="@color/secondaryColor"
                android:src="@drawable/ic_menu_plus" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>