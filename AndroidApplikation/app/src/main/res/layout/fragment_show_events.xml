<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentActivity.ShowEventsFragment">

    <RelativeLayout
        android:id="@+id/event_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/event_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_filter" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/showEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp" />

    <RelativeLayout
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_menu_plus_gray"
            android:drawableTint="@color/white"
            android:id="@+id/add_event"
            android:backgroundTint="@color/secondaryColor"
            android:textColor="@color/white"
            android:text="Add Event"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_map_black_24dp"
            android:drawableTint="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/add_route"
            android:layout_below="@id/add_event"
            android:backgroundTint="@color/secondaryDarkColor"
            android:textColor="@color/white"
            android:text="Add Route"/>
    </RelativeLayout>

</FrameLayout>