<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gr03.amos.bikerapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".AddRoute" />
        <activity
            android:name=".SearchUserActivity"
            android:label="@string/title_activity_search_user"/>
        <activity
            android:name=".ShowEventActivity"
            android:label="@string/title_activity_show_event"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditEventActivity" />
        <activity android:name=".OldActivities.ChangePasswordActivity" />
        <activity android:name=".ProfileBasicUserActivity" />
        <activity android:name=".AddProfileBasicUserActivity" />
        <activity android:name=".EventDetailsActivity" />
    </application>

</manifest>